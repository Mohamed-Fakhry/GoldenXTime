<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/createdAtTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017/7/1"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000"
                    android:textAlignment="textEnd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headerTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:text="بناية وسط المدينة  "/>

                    <TextView
                        android:id="@+id/bodyTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:layout_marginBottom="8dp"
                        android:text="تم تحصيل شهر اكتوبر بقية    1000دبنار"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/checkNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="123456789101112"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رقم الشيك : "
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/dueDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="2017-06-15"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تاريخ استحقاق : "
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/fromBankTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="AlAhli"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="من بنك : "
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/toBankTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="HSBC"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إلى بنك : "
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/valueTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="2000"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="قيمة : "
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"
                            android:background="#00000000"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/marker_bg"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>