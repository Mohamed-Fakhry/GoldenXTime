<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/verifyIV"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_verified"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/codeET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/verifyIV"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:maxLines="1"
            android:textAlignment="center"
            android:hint="@string/codeText"
            android:layout_marginTop="16dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codeET">

            <Button
                android:id="@+id/verifyB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:textColor="@color/whiteColor"
                android:layout_marginTop="8dp"
                android:text="@string/verifyText"
                android:textSize="20sp"
                android:layout_marginRight="4dp"/>

            <Button
                android:id="@+id/retryB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_bg"
                android:textColor="@color/whiteColor"
                android:layout_marginTop="8dp"
                android:text="اعادة الارسال"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>