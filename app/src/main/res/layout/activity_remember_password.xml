<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_remember_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.goldenxtime.com.goldenxtime.view.restpassword.RememberPasswordActivity">

    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"/>

    <TextView
        android:id="@+id/rememberTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoIV"
        android:text="لا اتذكر كلمة المرور"
        android:textAlignment="center"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/emailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_bg"
        android:maxLines="1"
        android:hint="البريد الالكترونى"
        android:layout_below="@id/rememberTV"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/restPasswordB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_below="@id/emailET"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:textColor="@color/whiteColor"
        android:text="ارسال"/>
</LinearLayout>
